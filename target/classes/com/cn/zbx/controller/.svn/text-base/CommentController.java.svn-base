package com.cn.zbx.controller;

import java.util.List;

import javax.annotation.Resource;
import javax.servlet.http.HttpServletResponse;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.cn.zbx.pojo.TComment;
import com.cn.zbx.service.CommentService;
import com.cn.zbx.util.ReturnJsonUtil;
import com.cn.zbx.vo.CommentInfoVo;

@Controller
@RequestMapping(value="comment")
public class CommentController {
	
	private static final Logger LOGGER = LoggerFactory.getLogger(CommentController.class);
	
	@Resource
	private CommentService commentService;
	
	@RequestMapping(value="add")
	@ResponseBody
	public void add(HttpServletResponse response, TComment comment){
		LOGGER.info("add comment param : " + comment.toString());
		boolean insert = commentService.insert(comment);
		if(insert){
			ReturnJsonUtil.returnDataMsg(response);
		}else{
			ReturnJsonUtil.returnErrorMsg("4", "发表评论失败", response);
		}
	}
	
	@RequestMapping(value="update")
	@ResponseBody
	public void update(HttpServletResponse response, TComment comment){
		LOGGER.info("update comment param : " + comment.toString());
		boolean update = commentService.update(comment);
		if(update){
			ReturnJsonUtil.returnDataMsg(response);
		}else{
			ReturnJsonUtil.returnErrorMsg("4", "修改评论失败", response);
		}
	}
	
	@RequestMapping(value="getCommentInfoList")
	@ResponseBody
	public void getCommentList(HttpServletResponse response, Long resId){
		LOGGER.info("getCommentInfoList param : resId = " + resId);
		List<CommentInfoVo> commentList = commentService.selectCommentInfoByResId(resId);
		ReturnJsonUtil.returnDataMsg(commentList, response);
	}

}
