package com.cn.zbx.service.impl;

import java.util.List;

import javax.annotation.Resource;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.cn.zbx.dao.TWatchRecordDao;
import com.cn.zbx.pojo.tWatchRecord;
import com.cn.zbx.service.WatchRecordService;
import com.cn.zbx.util.Util;

@Service("watchRecordService")
@Transactional
public class WatchRecordServiceImpl implements WatchRecordService {
	
	@Resource
	private TWatchRecordDao watchRecordDao;

	@Override
	public boolean insert(tWatchRecord record) {
		return Util.isSuccessByNum(watchRecordDao.insert(record));
	}

	@Override
	public boolean update(tWatchRecord record) {
		return Util.isSuccessByNum(watchRecordDao.update(record));
	}

	@Override
	public List<tWatchRecord> select(tWatchRecord record) {
		return watchRecordDao.select(record);
	}

	@Override
	public tWatchRecord selectByPojo(tWatchRecord record) {
		return watchRecordDao.selectByPojo(record);
	}

	@Override
	public int selectCountByPojo(tWatchRecord record) {
		return watchRecordDao.selectCountByPojo(record);
	}
	
	
	
}
